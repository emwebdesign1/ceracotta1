generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model anonwishlistitem {
  id        String   @id
  visitorId String
  productId String
  createdAt DateTime @default(now())
  product   product  @relation(fields: [productId], references: [id], onDelete: Cascade, map: "AnonWishlistItem_productId_fkey")

  @@unique([visitorId, productId], map: "AnonWishlistItem_visitorId_productId_key")
  @@index([productId, createdAt], map: "AnonWishlistItem_productId_createdAt_idx")
}

model cart {
  id        String     @id
  userId    String     @unique(map: "Cart_userId_key")
  createdAt DateTime   @default(now())
  updatedAt DateTime
  user      user       @relation(fields: [userId], references: [id], onDelete: Cascade, map: "Cart_userId_fkey")
  cartitem  cartitem[]
}

model cartitem {
  id        String   @id
  cartId    String
  productId String
  title     String
  unitPrice Int?
  quantity  Int
  image     String?
  variantId String?
  color     String?
  size      String?
  cart      cart     @relation(fields: [cartId], references: [id], map: "CartItem_cartId_fkey")
  product   product  @relation(fields: [productId], references: [id], map: "CartItem_productId_fkey")
  variant   variant? @relation(fields: [variantId], references: [id], map: "CartItem_variantId_fkey")

  @@index([cartId], map: "CartItem_cartId_idx")
  @@index([productId], map: "CartItem_productId_idx")
  @@index([variantId], map: "CartItem_variantId_idx")
}

model category {
  id        String    @id
  name      String
  slug      String    @unique(map: "Category_slug_key")
  createdAt DateTime  @default(now())
  updatedAt DateTime
  product   product[]
}

model dailyproductstat {
  id         String   @id
  date       DateTime
  productId  String
  views      Int      @default(0)
  addToCarts Int      @default(0)
  purchases  Int      @default(0)
  revenue    Int      @default(0)
  favorites  Int      @default(0)

  @@unique([date, productId], map: "DailyProductStat_date_productId_key")
  @@index([date], map: "DailyProductStat_date_idx")
  @@index([productId, date], map: "DailyProductStat_productId_date_idx")
}

model event {
  id        String     @id
  createdAt DateTime   @default(now())
  type      event_type
  sessionId String
  path      String?
  productId String?
  value     Int?
  currency  String?
  meta      Json?
  session   session    @relation(fields: [sessionId], references: [id], map: "Event_sessionId_fkey")

  @@index([createdAt], map: "Event_createdAt_idx")
  @@index([productId, createdAt], map: "Event_productId_createdAt_idx")
  @@index([sessionId], map: "Event_sessionId_idx")
  @@index([type, createdAt], map: "Event_type_createdAt_idx")
}

model image {
  id        String   @id
  url       String
  position  Int      @default(0)
  productId String?
  variantId String?
  colorHex  String?
  product   product? @relation(fields: [productId], references: [id], map: "Image_productId_fkey")
  variant   variant? @relation(fields: [variantId], references: [id], map: "Image_variantId_fkey")

  @@index([productId], map: "Image_productId_fkey")
  @@index([variantId], map: "Image_variantId_fkey")
}

model order {
  id              String                @id
  userId          String?
  amount          Int
  currency        String                @default("CHF")
  status          order_status          @default(PENDING)
  paymentMethod   order_paymentMethod
  paymentProvider order_paymentProvider @default(STRIPE)
  paymentIntentId String?
  paymentStatus   String?
  shippingAddress Json?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime
  user            user?                 @relation(fields: [userId], references: [id], map: "Order_userId_fkey")
  orderitem       orderitem[]

  @@index([createdAt], map: "Order_createdAt_idx")
  @@index([userId], map: "Order_userId_idx")
}

model orderitem {
  id        String   @id
  orderId   String
  productId String
  title     String
  unitPrice Int
  quantity  Int
  image     String?
  variantId String?
  color     String?
  size      String?
  order     order    @relation(fields: [orderId], references: [id], onDelete: Cascade, map: "OrderItem_orderId_fkey")
  product   product  @relation(fields: [productId], references: [id], onDelete: Cascade, map: "OrderItem_productId_fkey")
  variant   variant? @relation(fields: [variantId], references: [id], map: "OrderItem_variantId_fkey")

  @@index([orderId], map: "OrderItem_orderId_idx")
  @@index([productId], map: "OrderItem_productId_idx")
  @@index([variantId], map: "OrderItem_variantId_idx")
}

model product {
  id               String             @id
  title            String
  slug             String             @unique(map: "Product_slug_key")
  description      String?            @db.MediumText
  price            Int
  stock            Int                @default(0)
  createdAt        DateTime           @default(now())
  updatedAt        DateTime
  categoryId       String?
  careAdvice       String?            @db.MediumText
  pieceDetail      String?            @db.MediumText
  shippingReturn   String?            @db.MediumText
  anonwishlistitem anonwishlistitem[]
  cartitem         cartitem[]
  image            image[]
  orderitem        orderitem[]
  category         category?          @relation(fields: [categoryId], references: [id], map: "Product_categoryId_fkey")
  productcolor     productcolor[]
  productimage     productimage[]
  variant          variant[]
  wishlistitem     wishlistitem[]

  @@index([categoryId], map: "Product_categoryId_idx")
}

model productcolor {
  id        String  @id
  productId String
  name      String?
  hex       String?
  product   product @relation(fields: [productId], references: [id], onDelete: Cascade, map: "ProductColor_productId_fkey")

  @@index([productId], map: "ProductColor_productId_idx")
}

model productimage {
  id        String  @id
  productId String
  url       String
  position  Int     @default(0)
  product   product @relation(fields: [productId], references: [id], onDelete: Cascade, map: "ProductImage_productId_fkey")

  @@unique([productId, position], map: "ProductImage_productId_position_key")
  @@index([productId], map: "ProductImage_productId_idx")
}

model session {
  id          String    @id
  visitorId   String
  startedAt   DateTime  @default(now())
  endedAt     DateTime?
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  referrer    String?
  event       event[]
  visitor     visitor   @relation(fields: [visitorId], references: [id], map: "Session_visitorId_fkey")

  @@index([visitorId], map: "Session_visitorId_fkey")
}

model surveyresponse {
  id        String                @id
  choice    surveyresponse_choice
  otherText String?               @db.VarChar(255)
  email     String?               @db.VarChar(190)
  createdAt DateTime              @default(now())

  @@index([choice], map: "SurveyResponse_choice_idx")
  @@index([createdAt], map: "SurveyResponse_createdAt_idx")
}

model user {
  id           String         @id
  email        String         @unique(map: "User_email_key")
  passwordHash String
  role         user_role      @default(CUSTOMER)
  firstName    String?
  lastName     String?
  username     String?        @unique(map: "User_username_key")
  phone        String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime
  addressLine1 String?
  addressLine2 String?
  city         String?
  country      String?
  zip          String?
  cart         cart?
  order        order[]
  wishlistitem wishlistitem[]
}

model variant {
  id        String      @id
  productId String
  sku       String?
  color     String?
  size      String?
  price     Int?
  stock     Int         @default(0)
  cartitem  cartitem[]
  image     image[]
  orderitem orderitem[]
  product   product     @relation(fields: [productId], references: [id], map: "Variant_productId_fkey")

  @@index([productId], map: "Variant_productId_fkey")
}

model visitor {
  id         String    @id
  createdAt  DateTime  @default(now())
  lastSeenAt DateTime
  ipHash     String?
  userAgent  String?
  session    session[]
}

model wishlistitem {
  id        String   @id
  userId    String
  productId String
  createdAt DateTime @default(now())
  product   product  @relation(fields: [productId], references: [id], onDelete: Cascade, map: "WishlistItem_productId_fkey")
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade, map: "WishlistItem_userId_fkey")

  @@unique([userId, productId], map: "WishlistItem_userId_productId_key")
  @@index([productId, createdAt], map: "WishlistItem_productId_createdAt_idx")
}

enum surveyresponse_choice {
  MUGS_COLORFUL
  PLATES_MINIMAL
  BOWLS_GENEROUS
  OTHER
}

enum event_type {
  PAGE_VIEW
  PRODUCT_VIEW
  ADD_TO_CART
  REMOVE_FROM_CART
  BEGIN_CHECKOUT
  PURCHASE
  FAVORITE_ADD
  FAVORITE_REMOVE
}

enum user_role {
  ADMIN
  CUSTOMER
}

enum order_status {
  PENDING
  PAID
  SHIPPED
  DELIVERED
  CANCELED
}

enum order_paymentMethod {
  CARD
  TWINT
}

enum order_paymentProvider {
  STRIPE
  TWINT
}
